{% extends 'base.html.twig' %}

{% block title %}
{{ product.title }}
{% endblock %}

{% block body %}
<div class="container">

<div class="product-detail row">
    <div class="col-sm-6">
        <div class="product-image">
            {% if product.detailImage %}
            <img class="img-responsive" src="{{ product.detailImage }}">
            {% else %}
            <img class="img-responsive" src="{{ product.previewImage }}">
            {% endif %}
        </div> 
    </div>

    <div  class="col-sm-6">
    {{ product.id }}
    <h1>{{ product.title }}</h1>
    {{ product.previewText }}
    {{ product.price }}
    {{ product.discountPrice }}

                <form class="addtocart" action="/basket/add">
                <input type="hidden" name="id" value="{{ product.id }}">
                <button type="submit" class="btn btn-warning" name="add" value="Y">Купить</button>
                </form> 

    </div>

    <div class="col-xs-12">
{{ product.detailText }}
{{ product.metaTitle }}
{{ product.metaDescription }}
{{ product.metaKeywords }}      
    </div>
</div>

</div>
{% endblock %}
