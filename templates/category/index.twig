{% extends 'base.html.twig' %}

{% block body %}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
<div class="container">

<nav class="row">

      {% for category in categories %}
		<div class="col-md-3">
			
			<div class="card card-category">
			  <div class="img-wrap" style="background: #ffd7d7">
			  	<img src="/assets/images/items/1.jpg">
			  </div>
			  <div class="card-body">
			    <h4 class="card-title"><a href="{{ path('category_show', {'id': category.id}) }}">{{ category.title }}</a></h4>
			  </div>
			</div>

		</div> <!-- col.// -->

      {% endfor %}

</nav>

</div>
</section>

{% endblock %}