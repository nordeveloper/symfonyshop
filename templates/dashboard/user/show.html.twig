{% extends 'dashboard/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h3>User</h3>

    <p><a href="{{ path('user_index') }}">back to list</a></p>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Created_date</th>
                <td>{{ user.createdDate ? user.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_date</th>
                <td>{{ user.updatedDate ? user.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active }}</td>
            </tr>
        </tbody>
    </table>

    <p><a class="btn btn-success" href="{{ path('user_edit', {'id': user.id}) }}">edit</a></p>

    {{ include('dashboard/user/_delete_form.html.twig') }}
{% endblock %}
