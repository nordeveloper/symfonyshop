{% extends 'dashboard/base.html.twig' %}

{% block title %}Новости{% endblock %}

{% block body %}
    <h4>Reviews</h4>
    
    <p><a class="btn btn-success" href="{{ path('reviews_new') }}">Add</a></p>

    <table class="table table-bordered admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Кем создан</th>
                <th>Дата создания</th>
                <th>Активно</th>
                <th>Заголовок</th>
                <th>Картинка анонса</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.createdBy }}</td>
                <td>{{ review.createdDate ? review.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                
                <td>
                {% if review.active %}
                    Да
                {% else %} 
                    Нет
                {% endif %}   
                </td>

                <td>{{ review.title }}</td>

                <td>
                {% if review.previewImage %}
                <a target="_blank" href="{{ review.previewImage }}"><img src="{{ review.previewImage }}"></a>
                {% endif %}
                </td>

                <td class="actions-column">
                    <a href="{{ path('dashboard_reviews_show', {'id': review.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('reviews_edit', {'id': review.id}) }}"><i class="fas fa-edit"></i></a>
					
            <form method="post" action="{{ path('reviews_delete', {'id': review.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                <button class="btn"><i class='fas fa-trash-alt'></i></button>
            </form>
					
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
