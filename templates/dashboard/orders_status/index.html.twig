{% extends 'dashboard/base.html.twig' %}

{% block title %}OrdersStatus index{% endblock %}

{% block body %}
    <h3>OrdersStatus</h3>

    <p><a class="btn btn-success" href="{{ path('orders_status_new') }}">Create new</a></p>

    <table class="table table table-bordered admin-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orders_status in orders_statuses %}
            <tr>
                <td>{{ orders_status.id }}</td>
                <td>{{ orders_status.name }}</td>
                <td>{{ orders_status.code }}</td>
                <td>{{ orders_status.color }}</td>
                <td>
                    <a href="{{ path('orders_status_show', {'id': orders_status.id}) }}">show</a>
                    <a href="{{ path('orders_status_edit', {'id': orders_status.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
