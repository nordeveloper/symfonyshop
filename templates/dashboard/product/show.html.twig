{% extends 'dashboard/base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table admin-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>CreatedBy</th>
                <td>{{ product.createdBy }}</td>
            </tr>
            <tr>
                <th>CreatedDate</th>
                <td>{{ product.createdDate ? product.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedDate</th>
                <td>{{ product.updatedDate ? product.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ product.active }}</td>
            </tr>
            <tr>
                <th>PreviewImage</th>
                <td>
                {% if product.previewImage %}
                <img src="{{ product.previewImage }}">
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>PreviewText</th>
                <td>{{ product.previewText }}</td>
            </tr>
            <tr>
                <th>DetailImage</th>
                <td>
                {% if product.detailImage %}
                <img src="{{ product.detailImage }}">
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>DetailText</th>
                <td>{{ product.detailText }}</td>
            </tr>
            <tr>
                <th>MetaTitle</th>
                <td>{{ product.metaTitle }}</td>
            </tr>
            <tr>
                <th>MetaDescription</th>
                <td>{{ product.metaDescription }}</td>
            </tr>
            <tr>
                <th>MetaKeywords</th>
                <td>{{ product.metaKeywords }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>DiscountPrice</th>
                <td>{{ product.discountPrice }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('dashboard_product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('dashboard/product/_delete_form.html.twig') }}
{% endblock %}
