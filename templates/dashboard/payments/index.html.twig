{% extends 'dashboard/base.html.twig' %}

{% block title %}Payments{% endblock %}

{% block body %}

<div class="card">

    <div class="card-header">
        <h3>Payments</h3>
        <a class="btn btn-success" href="{{ path('dashboard_payment_new') }}">Add payment</a>
    </div>

    <div class="card-body">

    <div class="table-responsive">
        <table class="table table-bordered admin-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Active</th>
                <th>Title</th>
                <th>Image</th>
                <th>Action_url</th>
                <th>Merchant_account</th>
                <th>Merchant_password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.active }}</td>
                <td>{{ payment.title }}</td>
                <td>{{ payment.image }}</td>
                <td>{{ payment.actionUrl }}</td>
                <td>{{ payment.merchantAccount }}</td>
                <td>{{ payment.merchantPassword }}</td>
                <td>
                    <a href="{{ path('dashboard_payment_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('dashboard_payment_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
        
    </div>
</div>

{% endblock %}
