{% extends 'dashboard/base.html.twig' %}

{% block title %}Certificates{% endblock %}

{% block body %}
    <h3>Certificates</h3>
    
    <p><a class="btn btn-success" href="{{ path('certificates_new') }}">Add new</a></p>

    <table class="table table-bordered admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Active</th>
                <th>Created by</th>
                <th>Created date</th>
                <th>Title</th>
                <th>Preview image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for certificate in certificates %}
            <tr>
                <td>{{ certificate.id }}</td>
                <td>
                {% if certificate.active %}
                    Да
                {% else %} 
                    Нет
                {% endif %}   
                </td>                
                <td>{{ certificate.createdBy }}</td>
                <td>{{ certificate.createdDate ? certificate.createdDate|date('Y-m-d H:i:s') : '' }}</td>

                <td>{{ certificate.title }}</td>

                <td>
                {% if certificate.previewImage %}
                <a target="_blank" href="{{ certificate.previewImage }}"><img src="{{ certificate.previewImage }}"></a>
                {% endif %}
                </td>

                <td class="actions-column">
                    <a href="{{ path('dashboard_certificates_show', {'id': certificate.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('certificates_edit', {'id': certificate.id}) }}"><i class="fas fa-edit"></i></a>
					
            <form method="post" action="{{ path('certificates_delete', {'id': certificate.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ certificate.id) }}">
                <button class="btn"><i class='fas fa-trash-alt'></i></button>
            </form>
					
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}