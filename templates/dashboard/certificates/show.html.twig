{% extends 'dashboard/base.html.twig' %}

{% block title %}Certificates{% endblock %}

{% block body %}
    <h3>Certificates</h3>

    <p><a href="{{ path('dashboard_certificates_index') }}">back to list</a></p>

    <table class="table table-bordered admin-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ certificate.id }}</td>
            </tr>
            <tr>
                <th>Created_by</th>
                <td>{{ certificate.createdBy }}</td>
            </tr>
            <tr>
                <th>Updated_date</th>
                <td>{{ certificate.updatedDate ? certificate.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ certificate.active }}</td>
            </tr>            
            <tr>
                <th>Title</th>
                <td>{{ certificate.title }}</td>
            </tr>
            <tr>
                <th>Preview_text</th>
                <td>{{ certificate.previewText }}</td>
            </tr>

            {% if certificate.previewImage %}
            <tr>
                <th>Изображения анонса</th>
                <td><a target="_blank"  href="{{ certificate.previewImage }}"><img class="img-responsive" src="{{ certificate.previewImage }}" alt="{{ certificate.title }}"></a></td>
            </tr>
            {% endif %}

            {% if certificate.detailImage %}
            <tr>
                <th>Детальная картинка</th>
                <td><a target="_blank"  href="{{ certificate.detailImage }}"><img class="img-responsive" src="{{ certificate.detailImage }}" alt="{{ certificate.title }}"></a></td>
            </tr>
            {% endif %}

        </tbody>
    </table>

    <p><a class="btn btn-success" href="{{ path('certificates_edit', {'id': certificate.id}) }}">edit</a></p>

    {{ include('dashboard/certificates/_delete_form.html.twig') }}
{% endblock %}
