{% extends 'dashboard/base.html.twig' %}

{% block title %}Portfolios{% endblock %}

{% block body %}
    <div class="card">
    <div class="card-header">
        <h4>Portfolios</h4>    
        <p><a class="btn btn-success" href="{{ path('portfolio_new') }}">Add portfolio</a></p>
    </div>
    <div>

    </div>

    <div class="card-body">

    <div class="table-responsive">
    <table class="table table-bordered admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Кем создан</th>
                <th>Дата создания</th>
                <th>Активно</th>
                <th>Заголовок</th>
                <th>Картинка анонса</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for portfolio in portfolios %}
            <tr>
                <td>{{ portfolio.id }}</td>
                <td>{{ portfolio.createdBy }}</td>
                <td>{{ portfolio.createdDate ? portfolio.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                
                <td>
                {% if portfolio.active %}
                    Да
                {% else %} 
                    Нет
                {% endif %}   
                </td>

                <td>{{ portfolio.title }}</td>

                <td>
                {% if portfolio.previewImage %}
                <a target="_blank" href="{{ portfolio.previewImage }}"><img src="{{ portfolio.previewImage }}"></a>
                {% endif %}
                </td>

                <td class="actions-column">
                    <a href="{{ path('dashboard_portfolio_show', {'id': portfolio.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('portfolio_edit', {'id': portfolio.id}) }}"><i class="fas fa-edit"></i></a>
					
            <form method="post" action="{{ path('portfolio_delete', {'id': portfolio.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ portfolio.id) }}">
                <button class="btn"><i class='fas fa-trash-alt'></i></button>
            </form>
					
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    </div>
    </div>

{% endblock %}