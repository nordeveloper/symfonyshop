{% extends 'dashboard/base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
    <h3>Portfolio</h3>
    
     <p><a href="{{ path('dashboard_portfolio_index') }}">back to list</a> </p>

    <table class="table table-bordered admin-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ portfolio.id }}</td>
            </tr>
            <tr>
                <th>Created_by</th>
                <td>{{ portfolio.createdBy }}</td>
            </tr>
            <tr>
                <th>Created_date</th>
                <td>{{ portfolio.createdDate ? portfolio.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_date</th>
                <td>{{ portfolio.updatedDate ? portfolio.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ portfolio.active }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ portfolio.title }}</td>
            </tr>

            {% if portfolio.previewImage %}
            <tr>
                <th>Изображения анонса</th>
                <td><a target="_blank"  href="{{ portfolio.previewImage }}"><img class="img-responsive" src="{{ portfolio.previewImage }}" alt="{{ portfolio.title }}"></a></td>
            </tr>
            {% endif %}

            {% if portfolio.detailImage %}
            <tr>
                <th>Детальная картинка</th>
                <td><a target="_blank"  href="{{ portfolio.detailImage }}"><img class="img-responsive" src="{{ portfolio.detailImage }}" alt="{{ portfolio.title }}"></a></td>
            </tr>
            {% endif %} 

            <tr>
                <th>Preview_text</th>
                <td>{{ portfolio.previewText }}</td>
            </tr>
            <tr>
                <th>Detail_text</th>
                <td>{{ portfolio.detailText }}</td>
            </tr>
            <tr>
                <th>Meta_title</th>
                <td>{{ portfolio.metaTitle }}</td>
            </tr>
            <tr>
                <th>Meta_description</th>
                <td>{{ portfolio.metaDescription }}</td>
            </tr>
            <tr>
                <th>Meta_keywords</th>
                <td>{{ portfolio.metaKeywords }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('portfolio_edit', {'id': portfolio.id}) }}">edit</a>

{% endblock %}
