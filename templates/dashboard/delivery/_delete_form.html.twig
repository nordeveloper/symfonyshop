<form method="post" action="{{ path('dashboard_delivery_delete', {'id': delivery.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ delivery.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
