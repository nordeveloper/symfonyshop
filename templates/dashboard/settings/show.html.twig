{% extends 'base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
    <h1>Settings</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ setting.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ setting.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ setting.code }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ setting.value }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('settings_index') }}">back to list</a>

    <a href="{{ path('settings_edit', {'id': setting.id}) }}">edit</a>

    {{ include('settings/_delete_form.html.twig') }}
{% endblock %}
