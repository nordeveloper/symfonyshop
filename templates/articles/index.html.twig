{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<section class="section-content padding-y">
    <div class="container">
        <h1>Blog</h1>
        <div class="row news-list">
            {% for item in results %}
                <div class="news-item col-xs-12 col-sm-6">
                    <h3><a href="{{ path('blog_show', {'id': item.id}) }}">{{ item.title }}</a></h3>
                    {#                <p>Автор: {{ item.createdBy }} {{ item.createdDate ? item.createdDate|date('Y-m-d H:i:s') : '' }} </p>#}

                    {% if item.previewImage %}
                        <p><img class="img-responsive" src="{{ item.previewImage }}" alt="{{ item.title }}"></p>
                    {% endif %}

                    <p>{{ item.previewText }}</p>

                </div>
            {% else %}
                no records found
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
